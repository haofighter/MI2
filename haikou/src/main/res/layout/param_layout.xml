<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:id="@+id/param_layout"
              android:visibility="gone"
              android:layout_height="match_parent"
              android:background="@color/gray_dd"

              android:orientation="horizontal">
    <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:orientation="vertical">

        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="10dp">
            <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="车辆号："
                    android:textColor="@color/white"
                    android:layout_weight="1"/>

            <TextView
                    android:id="@+id/bus_no"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/white"
                    android:gravity="right"/>
        </LinearLayout>
        <include layout="@layout/v_05_line"/>
        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="10dp">
            <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="线路名："
                    android:textColor="@color/white"
                    android:layout_weight="1"/>
            <TextView
                    android:id="@+id/line_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="right"
                    android:textColor="@color/white"/>
        </LinearLayout>
        <include layout="@layout/v_05_line"/>
        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="10dp">
            <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="司机号："
                    android:textColor="@color/white"
                    android:layout_weight="1"/>
            <TextView
                    android:id="@+id/driver_no"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/white"
                    android:gravity="right"/>
        </LinearLayout>
        <include layout="@layout/v_05_line"/>
        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="10dp">
            <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="线路号："
                    android:textColor="@color/white"
                    android:layout_weight="1"/>
            <TextView
                    android:id="@+id/line_id"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/white"
                    android:gravity="right"/>
        </LinearLayout>
        <include layout="@layout/v_05_line"/>
        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="10dp">
            <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="bin版本："
                    android:textColor="@color/white"
                    android:layout_weight="1"/>
            <TextView
                    android:id="@+id/bin_ver"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/white"
                    android:gravity="right"/>
        </LinearLayout>
        <include layout="@layout/v_05_line"/>
        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="10dp">
            <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="app版本："
                    android:textColor="@color/white"
                    android:layout_weight="1"/>
            <TextView
                    android:id="@+id/app_ver"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/white"
                    android:gravity="right"/>
        </LinearLayout>
        <include layout="@layout/v_05_line"/>
        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="10dp"
                android:orientation="vertical">
            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="参数状态："
                    android:textColor="@color/white"/>
            <TextView
                    android:id="@+id/param_date"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/white"
                    android:gravity="right"/>
        </LinearLayout>
    </LinearLayout>
    <include layout="@layout/or_05_line"/>
    <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:orientation="vertical">
        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="10dp">
            <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="腾讯(已上传/总数)："
                    android:textColor="@color/white"
                    android:layout_weight="1"/>
            <TextView
                    android:id="@+id/txscan"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/white"
                    android:gravity="right"/>
        </LinearLayout>
        <include layout="@layout/v_05_line"/>
        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="10dp">
            <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="支付宝(已上传/总数)："
                    android:textColor="@color/white"
                    android:layout_weight="1"/>
            <TextView
                    android:id="@+id/alscan"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/white"
                    android:gravity="right"/>
        </LinearLayout>
        <include layout="@layout/v_05_line"/>
        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="10dp">
            <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="交通部(已上传/总数)："
                    android:textColor="@color/white"
                    android:layout_weight="1"/>
            <TextView
                    android:id="@+id/jtbscan"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/white"
                    android:gravity="right"/>
        </LinearLayout>
        <include layout="@layout/v_05_line"/>
        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="10dp">
            <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="银联(已上传/总数)："
                    android:textColor="@color/white"
                    android:layout_weight="1"/>
            <TextView
                    android:id="@+id/union_date"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/white"
                    android:gravity="right"/>
        </LinearLayout>
        <include layout="@layout/v_05_line"/>
        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="10dp">
            <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="刷卡(已上传/总数)："
                    android:textColor="@color/white"
                    android:layout_weight="1"/>
            <TextView
                    android:id="@+id/card_date"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/white"/>
        </LinearLayout>
        <include layout="@layout/v_05_line"/>
    </LinearLayout>
</LinearLayout>
